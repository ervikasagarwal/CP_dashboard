<!DOCTYPE html>
<head>
<title> Dashboard </title>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    // Load google charts
    google.charts.load('current', {'packages':['corechart']});
    google.charts.setOnLoadCallback(drawChart);
    
    // Draw the chart and set the chart values
    function drawChart() {
      var data = google.visualization.arrayToDataTable([
      ['Task', 'Hours per Day'],
      ['Positive', 3],
      ['Negative', 5],
      ['Same', 4]
    ]);
    
      // Optional; add a title and set the width and height of the chart
      var options = {'title':'', 'width':550, 'height':400};
    
      // Display the chart inside the <div> element with id="piechart"
      var chart = new google.visualization.PieChart(document.getElementById('piechart'));
      chart.draw(data, options);
    }
</script>
<link rel="stylesheet" href="../public/style.css">
</head>
<body style="background:#eff5f5;">

<div class="header " style="height:100px;color:lightblue;"><h2>ClassPlus Deshboard</h2></div>
<div class="row">
   <div class="col-sm-1"></div>
   <div class="col-sm-5 row bg-white ">
       <div class="border-bottom col-sm-12">
            <h3 class="page-header text-center pt-2">OverAll App Usage</h3>
       </div>
        
        <div id="piechart" class=" pl-0 col-sm-12"></div>
        
   </div>
   <div class="col-sm-1"></div>
   <div class="col-sm-4 bg-white ">
    <div class="border-bottom col-sm-12">
        <h3 class="text-center pt-2">General States</h3>
    </div>
    <div class="ver-space col-sm-12" style="height: 100px;"></div>
    <div class="row ">
       <div class="col-sm-6 text-center">
             <image src="1.jpg" style="width:50%;"><br>
             <span>No. of Institutions</span><br>
             <span>274</span>

       </div>
       <div class="col-sm-6 text-center">
            <image src="2.jpg"><br>
             <span>Total app downloads</span><br>
             <span>54</span>
       </div>
    </div>
   </div> 
</div>
<div class="row" style="height:100px;"></div>
<div class="row">
        <div class="row col-sm-12 border-bottom ">
           <div class="col-sm-6"><h3>Detailed Activity</h3></div> 
           
           <div class="col-sm-6 row ">
                <a type="button" class="Weeklybtn col-sm-3 btn btn-primary " href="/7">7 days</a>
                <a type="button" class=" btn btn-primary col-sm-3" href="/15">15 days</a>
                <a type="button" class=" btn btn-primary col-sm-3" href="/30">30 days</a>
                <a type="button" class=" btn btn-primary col-sm-3" href="/excel">Export Sheet</a>
           </div>
        </div>
        <div class="col-sm-12 row" style="height:30px;"></div>
        <div class="row col-sm-12 ">
            <table class="table  table-stripped col-sm-12 text-center " style="width:200px">
                
                    <tr>
                        <th>Orgid</th>
                        <th>Coaching Name </th>
                        <th>Attendance</th>
                        <th>Attendance Topic</th>
                        <th>Home Work</th>
                        <th>Offline Test</th>
                        <th>Online Test</th>
                        <th>Announcement</th>
                        <th>Resources</th>
                    </tr>
                    
                    <%    
                        for( i in result){
                            let org = result[i];
                    %>
                    <tr>
                        <td><%= org.id%></td>
                        <td><a href="/org/<%= org.orgid %>"><%= org.name%></a></td>
                        <td><%= org.attendance%></td>
                        <td><%= org.attendanceTopics%></td>
                        <td><%= org.homeWorks%></td>
                        <td><%= org.offlineTests%></td>
                        <td><%= org.onlineTests%></td>
                        <td><%= org.announcements %></td>
                        <td><%= org.freeResources%></td>
                    </tr>
                    <%
                          }  
                    %>
            </table>
        </div>
    </div>
    <div class="footer" style="height:200px;"></div>
</body>